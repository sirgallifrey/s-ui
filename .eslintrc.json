{
    "plugins": [
        "react"
    ],
    "extends": ["hapi"],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        }
    },
    "rules": {
        "object-shorthand": ["warn", "never"],
        "react/no-deprecated":2,
        "react/no-string-refs": 2,
        "react/prefer-es6-class":1,
        "react/prop-types":2,
        "react/no-unused-prop-types": 1,
        "react/jsx-uses-vars":1
    }
}
